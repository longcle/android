<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Custom action bar sherlock -->
    <style name="CustomTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/mActionBar</item>
    </style>
	<style name="mActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/orangle</item>
        <item name="android:icon">@drawable/icon_menu_32</item>
        <item name="android:titleTextStyle">@style/mTitleTextStyle</item>
        <item name="android:indeterminateProgressStyle">@android:style/Widget.ProgressBar.Small.Inverse</item>

    </style>
    <style name="mTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/action_bar_text_size</item>
    </style>
    <style name="mIndeterminateProgress" parent="@android:style/Widget.ProgressBar.Horizontal">
        
    </style>
</resources>
