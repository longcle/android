            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/btnSearchInCategory"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
