<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <solid
            android:color="@color/orangle" />
        <stroke
            android:width="1dp"
            android:color="@color/gray_of_grey" />
        <corners
            android:radius="3dp" />
        <padding
            android:left="4dp"
            android:top="2dp"
            android:right="4dp"
            android:bottom="2dp" />
    </shape>
</item>
<item android:state_checked="true" >
    <shape>
        <solid
            android:color="@color/orangle" />
        <stroke
            android:width="3dp"
            android:color="@color/gray_of_grey" />
        <corners
            android:radius="3dp" />
        <padding
            android:left="4dp"
            android:top="2dp"
            android:right="4dp"
            android:bottom="2dp" />
    </shape>
</item>        

</selector>